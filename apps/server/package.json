{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsgo --noEmit",
    "gen:web-embed": "bun scripts/generate-web-embed.ts",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "compile:single": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile better-app",
    "db:seed": "bun scripts/seed.ts",
    "dev": "bun run scripts/dev-server.ts",
    "kpi:regenerate": "bun scripts/regenerate-kpi-snapshots.ts",
    "start": "bun run dist/index.mjs"
  },
  "dependencies": {
    "@better-app/auth": "workspace:*",
    "@better-app/db": "workspace:*",
    "@better-app/shared": "workspace:*",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/cron": "^1.4.1",
    "@elysiajs/openapi": "^1.4.13",
    "@opentelemetry/api": "^1.9.0",
    "better-auth": "^1.4.13",
    "dotenv": "^17.2.3",
    "elysia": "^1.4.22",
    "jimp": "^1.6.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@better-app/config": "workspace:*",
    "@types/bun": "^1.3.6",
    "openapi-types": "^12.1.3",
    "tsdown": "^0.17.4",
    "typescript": "^5.9.3"
  }
}
