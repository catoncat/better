{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["vite/client"],
		"rootDirs": ["."],
		"paths": {
			"*": ["./*"],
			"@/*": ["./src/*"],
			"@better-app/shared": ["../../packages/shared/src/index.ts"],
			"@better-app/shared/*": ["../../packages/shared/src/*"],
			"elysia": ["./node_modules/elysia"]
		}
	}
}
