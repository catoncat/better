{
  "name": "better-app",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.4.0",
      "dotenv": "^17.2.2",
      "@prisma/client": "^7.0.0"
    }
  },
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "build:single": "DATABASE_URL=file:./data/db.db bun run db:generate && bun run --filter web build && bun run --filter server gen:web-embed && bun run --filter server compile:single",
    "check-types": "bun run db:generate && bun run --filter '*' check-types",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:fix-unsafe": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter server dev",
    "dev:server:acceptance": "DATABASE_URL=file:./data/acceptance.db PORT=3002 HOST=127.0.0.1 bun run --filter server dev",
    "db:push": "bun run --filter @better-app/db db:push",
    "db:studio": "bun run --filter @better-app/db db:studio",
    "db:generate": "bun scripts/safe-generate.ts",
    "db:migrate": "bun run --filter @better-app/db db:migrate",
    "db:deploy": "bun run --filter @better-app/db db:deploy",
    "db:seed": "bun run --filter server db:seed",
    "db:deploy:acceptance": "DATABASE_URL=file:./data/acceptance.db bun run db:deploy",
    "db:seed:acceptance": "DATABASE_URL=file:./data/acceptance.db bun run db:seed",
    "mes:acceptance": "bun scripts/mes-acceptance.ts",
    "workflow:run": "bun scripts/workflow-run.ts",
    "mes:triage": "bun scripts/workflow-run.ts agent_workflows/mes-triage.json"
  },
  "packageManager": "bun@1.3.1",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.3.6",
    "@typescript/native-preview": "^7.0.0-dev.20260115.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tanstack/zod-form-adapter": "^0.42.1"
  }
}
